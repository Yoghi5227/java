import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner sc = new Scanner(System.in);
        String name = sc.nextLine().trim();
        int followers = sc.nextInt();
        int posts = sc.nextInt();
        float hours = sc.nextFloat();
        //System.out.printf("My name is %s, my Instagram has %d followers, I have posted %d posts, and I use Instagram for %.1f hours daily.",name,followers,posts,hours);
        System.out.print("My name is "+name);
        System.out.print(", my Instagram has "+followers +" followers,");
        System.out.print(" I have posted "+posts +" posts,");
        System.out.print(" and I use Instagram for "+hours +" hours daily.");
    }
}
